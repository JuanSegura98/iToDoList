<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProgressbarsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ProgressBarsTitle"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/entry1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/firstEntry"/>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/progressbar1"
                        android:layout_width="102dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginStart="50dp"
                        android:layout_marginLeft="50dp"
                        android:src="@drawable/box" />
                    <ImageView
                        android:id="@+id/completedbar1"
                        android:layout_width="50dp"
                        android:layout_height="8dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:layout_marginStart="51dp"
                        android:layout_marginLeft="40dp"
                        android:src="@drawable/box2" />
                </FrameLayout>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/entry2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/secondEntry"/>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/progressbar2"
                        android:layout_width="102dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginStart="50dp"
                        android:layout_marginLeft="50dp"
                        android:src="@drawable/box" />
                    <ImageView
                        android:id="@+id/completedbar2"
                        android:layout_width="60dp"
                        android:layout_height="8dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:layout_marginStart="51dp"
                        android:layout_marginLeft="40dp"
                        android:src="@drawable/box2" />
                </FrameLayout>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/entry3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/thirdEntry"/>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/progressbar3"
                        android:layout_width="102dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginStart="50dp"
                        android:layout_marginLeft="50dp"
                        android:src="@drawable/box" />
                    <ImageView
                        android:id="@+id/completedbar3"
                        android:layout_width="20dp"
                        android:layout_height="8dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:layout_marginStart="51dp"
                        android:layout_marginLeft="40dp"
                        android:src="@drawable/box2" />
                </FrameLayout>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/entry4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fourthEntry"/>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/progressbar4"
                        android:layout_width="102dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginStart="50dp"
                        android:layout_marginLeft="50dp"
                        android:src="@drawable/box" />
                    <ImageView
                        android:id="@+id/completedbar4"
                        android:layout_width="50dp"
                        android:layout_height="8dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:layout_marginStart="51dp"
                        android:layout_marginLeft="40dp"
                        android:src="@drawable/box2" />
                </FrameLayout>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/entry5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fifthEntry"/>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/progressbar5"
                        android:layout_width="102dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginStart="50dp"
                        android:layout_marginLeft="50dp"
                        android:src="@drawable/box"/>
                    <ImageView
                        android:id="@+id/completedbar5"
                        android:layout_width="50dp"
                        android:layout_height="8dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:layout_marginStart="51dp"
                        android:layout_marginLeft="40dp"
                        android:src="@drawable/box2" />
                </FrameLayout>
            </TableRow>
        </TableLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floating_action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/create_task"
            app:srcCompat="@drawable/ic_plus_24" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>